<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/favicon.ico" type="image/x-icon">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

    <!-- Custom style -->
    <link rel="stylesheet" href="/styles/contact.css">

    <!-- Google font -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400&display=swap" rel="stylesheet">

    <title>Beta-weddin</title>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-purple">
            <div class="container">
                <img src="/assets/images/logo.svg" alt="" width="100">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item px-3">
                            <a class="nav-link active" aria-current="page" href="/">Home</a>
                        </li>
                        <li class="nav-item px-3">
                            <a class="nav-link" href="/about">About</a>
                        </li>
                        <li class="nav-item px-3">
                            <a class="nav-link" href="/contact">Contact</a>
                        </li>
                        <li class="nav-item px-3">
                            <a class="nav-link" href="/support">Support</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="registration-page mt-0">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-lg-6 left-wrapper text-white">
                    <div class="left-wrapper__content">
                        <h2 class="d-none d-lg-block pb-5">You can reach us via the following details</h2>
                        <p class="pb-3">
                            <span class="pr-2"><img src="/assets/images/Mail.svg" alt=""></span>
                            <span>betawedding.ng@gmail.com</span>
                        </p>
                        <p class="pb-3">
                            <span class="pr-2"><img src="/assets/images/Phone.svg" alt=""></span>
                            <span>+234816867890</span>
                        </p>
                        <p>
                            <span class="pr-2"><img src="/assets/images/Map-Pin.svg" alt=""></span>
                            <span>Lagos, Nigeria</span>
                        </p>
                        <div class="contact-img">
                            <img src="/assets/images/contact.svg" alt="">
                        </div>
                    </div>
                </div>
                <div class="col-lg-5 right-wrapper px-5 mt-5">
                    <div class="right-wrapper__header">
                        <h3 class="form-header pl-0">Please fill the enquiry form below to get a response within 24hours </h3>
                        <!-- <p class="form-desc text-center">Fill the fields in the form below as accurately as possible. Fields with the (*) sign are compulsory and must be filled</p> -->
                    </div>
                    <form [formGroup]="registerForm">
                        <div class="form-row">
                            <div class="form-group col-md-12 input-icon">
                                <label for="">Full Name</label>
                                <input type="text" class="form-control" id="firstName" placeholder="Please enter your fullname*" formControlName="first_name" [ngClass]="{'is-invalid': registerForm.get('first_name').errors
                                && registerForm.get('first_name').touched}">
                                <div class="invalid-feedback">Required</div>
                            </div>
                            <div class="form-group col-md-12 input-icon">
                                <label for="">Email</label>
                                <input type="email" class="form-control" id="email" placeholder="Please enter a valid email address*" formControlName="email" [ngClass]="{'is-invalid': registerForm.get('email').errors
                                && registerForm.get('email').touched}">
                                <div class="invalid-feedback">Required</div>
                            </div>
                            <div class="form-group col-md-12 input-icon">
                                <label for="">Subject</label>
                                <input type="password" class="form-control" id="password" placeholder="Please create a password" formControlName="password" [ngClass]="{'is-invalid': registerForm.get('password').errors
                                && registerForm.get('password').touched}">
                                <div class="invalid-feedback">Required</div>
                            </div>
                            <div class="form-group col-md-12 input-icon">
                                <label for="">Message</label>
                                <textarea class="form-control" placeholder="Leave a comment here" id="confirmPassword" style="height: 100px" formControlName="confirmPassword" [ngClass]="{'is-invalid': registerForm.get('confirmPassword').errors
                                    && registerForm.get('confirmPassword').touched}"></textarea>
                                <div class="invalid-feedback">Required</div>
                            </div>
                            <div class="form-group col-lg-12 col-sm-12">
                                <button class="btn btn-primary" (click)="submit()" [disabled]="!registerForm.valid" type="button">Send enquiry</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
